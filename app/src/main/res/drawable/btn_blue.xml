        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#99002679" android:startColor="#99002679" android:type="linear" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#99002679" android:startColor="#99002679" android:type="linear" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">

        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#99002679" android:startColor="#99002679" android:type="linear" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#002679" android:startColor="#002679" android:type="linear" /><!-- GREY = 4D4D4D -->
            <corners android:radius="@dimen/_20sdp" />
        </shape>
